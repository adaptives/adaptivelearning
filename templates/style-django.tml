}

.course-description a:link {
	color: {{course_description.a_link__color}};	
}

.course-description a:hover {
	color: {{course_description.a_hover__color}};	
}

#course-topics {
	margin-left: 20px;
}

#course-topics a:link {
	color: {{course_topics.a_link__color}};
	font-weight: bold;
	padding-left: 10px;
}

#course-topics a:visited {
	color: {{course_topics.a_link__color}};
	font-weight: bold;
	padding-left: 10px;
}

#course-topics a:hover {
	color: {{course_topics.a_hover__color}};
	font-weight: bold;
	padding-left: 10px;
}

#forum {
	margin-top: 20px;
	line-height: 1.4;
}

.link-theme-b a:visited {
	color: {{link_theme_b.a_link__color}};	
}

.link-theme-b a:link {
	color: {{link_theme_b.a_link__color}};	
}

.link-theme-b a:hover {
	color: {{link_theme_b.a_link__color}};	
}

.topic-navigation {
	padding: 20px;
	font-weight: bold;
}

.topic-navigation a {
	color: #FF7373;
	font-size: 14px;
}

.topic-navigation-top {
	padding-top: 5px;
	padding-left: 20px;
	padding-bottom: 5px;
	font-weight: bold;
}

.topic-navigation-top a {
	color: #FF7373;
	font-size: 14px;
}

.link-theme-static {
