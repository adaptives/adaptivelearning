* {
    margin: 0;
    padding: 0;
}


body {
		color: {{body.color}};
    background: {{body.background}};
    font-size: 13px; 
		font-family: {{body.font_family|safe}};
}

#header {
		background: {{header.background}};
    overflow: hidden;
		margin-bottom: 10px;
    border-bottom: {{header.border_bottom}};
		width: 1024px;
}

#header #header-main {
}

#nav-main {
		background-color: {{header.nav_main__background_color}};
		color: {{header.nav_main__color}};
		padding-left: 16px;
		padding-top: 2px;
		padding-bottom: 2px;
		overflow: none;
		font-size: 12px;
		font-family: {{header.nav_main__font_family|safe}};
		font-weight: bold;
		border-top: {{header.nav_main__border_top}};
}

#nav-main ul li {
		display: inline;
		margin: 5px;
}

#nav-main a:link {
	color: {{header.nav_main__a_link_color}};
}

#nav-main a:visited {
	color: {{header.nav_main__a_visited_color}};
}

#nav-main a:hover {
	color: {{header.nav_main__a_hover_color}};
}

h2 {
    font-size: {{h2.font_size}};
    color: {{h2.color}};
		margin-bottom: 5px;
}

#content {
    margin: 0 20px 2em 20px;
		float: left;
		width: {{content.width}};
}

a:link {
	color:{{a.link_color}};
}

a:visited {
	color: {{a.visited_color}};
}

#content #main {
    width: {{content.main__width}};
    float: left;
    padding-bottom: 4em;
		padding-right: 10px;
}

#content #sidebar {
		min-height: {{content.sidebar__min_height}};
    width: {{content.sidebar__width}};
    float: left;
		overflow: auto;
		background-color: {{content.sidebar__background_color}};
}

#content #sidebar a:hover {
	color: {{content.sidebar__a_hover_color}};
}

#blog-posts {
	margin: 10px;
	margin-top: 5px;
	line-height: 1.4;
}

#footer {
    clear: left;
    background-color: {{footer.background_color}};
    color: {{footer.color}};
    margin-top: 2em;
    width: {{footer.width}};
    overflow: auto;
}

#footer a:link {
	color: {{footer.a_link__color}};
	font-size: {{footer.a_link__font_size}};
	font-weight: bold;
}
#footer a:visited {
	color: {{footer.a_visited__color}};
	font-size: {{footer.a_visited__font_size}};
	font-weight: bold;
}
#footer a:hover {
	color: {{footer.a_hover__color}};
	font-size: {{footer.a_hover__font_size}};
	font-weight: bold;
}

#footer div.chunk {
    margin-top: 1em;
    margin-left: 20px;
    width: 15%;
    float: left;
    margin-bottom: 2em;
}

#footer div.chunk h3 {
    font-size: 110%;
}

#footer div.chunk ul {
    list-style-type: none;
}

#footer #copyright {
    clear: left;
    padding-top: 1em;
    margin-bottom: 1em;
    margin-left: 20px;
}

a {
	text-decoration: none;
}

.course_listing_heading {
	background: {{content.course_listing_heading__background_color}}; 
	padding-left: 5px;
}

.course_title {
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 2px;
	padding-bottom: 2px;
	background: #F9F9F9;
	border: 1px solid #EEEEEE;
	font-weight: bold;
}

#course-details {
	margin-bottom: 10px;
	padding-bottom: 5px;
}

.course_description {
	text-align: justify;
	padding: 5px;
	border-bottom: 1px solid #EEEEEE;
	border-left: 1px solid #EEEEEE;
	border-right: 1px solid #EEEEEE;
}


#course-listing a:link {
	color: {{course_listing.a_link__color}};
}

#course-listing a:visited {
	color: {{course_listing.a_visited__color}};
}

#course-listing a:hover {
	color: {{course_listing.a_hover__color}}; 
}

.course-name {
	color: {{course_name.color}};
	font-weight: bold;
	padding-bottom: 15px;
}

.topic-name {
	color: {{topic_name.color}};
	background-color: #EEEEEE;
	font-weight: bold;
	padding-left: 5px;
	font-size: 13px;
}

#topic-content {
	padding: 10px;
}

